<div class="container">
    <div class="row">
        {{#each productos}}
        <div class="col-4 mt-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">categoria: {{nombreCategoria}}</p>
                    <a href="/productos/single/{{id}}" class="btn btn-primary">Ver mas</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>