<div class="container-fluid bg-dark m-0" style="height : 100vh">
    <div class="row justify-content-center">
        <div class="col-4 bg-light">
            <form method="post" action="/registro/create">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Ingrese su nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" placeholder="Ingrese su apellido">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="mail" placeholder="Ingrese su mail">
                </div>
                <button type="submit" class="btn btn-primary">Registrate :D</button>
            </form>
        </div>
    </div>
</div>